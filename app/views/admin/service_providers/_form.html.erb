<!-- app/views/admin/service_providers/_form.html.erb -->
<%= form_with model: [:admin, @service_provider], local: true do |f| %>
  <% if @service_provider.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@service_provider.errors.count, "error") %> prohibited this service provider from being saved:</h5>
      <ul>
        <% @service_provider.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :entity_id, "Entity ID", class: "form-label" %>
    <%= f.text_field :entity_id, class: "form-control", placeholder: "https://sp.example.com", required: true %>
    <div class="form-text">Unique identifier for the service provider</div>
  </div>

  <div class="mb-3">
    <%= f.label :acs_url, "Assertion Consumer Service URL", class: "form-label" %>
    <%= f.text_field :acs_url, class: "form-control", placeholder: "https://sp.example.com/saml/acs", required: true %>
    <div class="form-text">URL where SAML responses will be sent</div>
  </div>

  <div class="mb-3">
    <%= f.label :metadata_url, "Metadata URL (Optional)", class: "form-label" %>
    <%= f.text_field :metadata_url, class: "form-control", placeholder: "https://sp.example.com/saml/metadata" %>
  </div>

  <div class="mb-3">
    <%= f.label :certificate, "SP Certificate (Optional)", class: "form-label" %>
    <%= f.text_area :certificate, class: "form-control", rows: 6, 
                    placeholder: "-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----" %>
    <div class="form-text">Service provider's X.509 certificate for signature verification</div>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :active, class: "form-check-input" %>
    <%= f.label :active, "Active", class: "form-check-label" %>
  </div>

  <div class="mt-4">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_service_providers_path, class: "btn btn-secondary" %>
  </div>
<% end %>